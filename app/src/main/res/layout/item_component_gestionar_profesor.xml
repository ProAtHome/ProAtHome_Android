<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/mtrl_card_spacing"
    android:layout_marginStart="@dimen/mtrl_card_spacing"
    android:layout_marginEnd="@dimen/mtrl_card_spacing">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_button">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imgGestionar"
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:visibility="visible"
            android:layout_marginStart="@dimen/common_padding_min"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_rawRes="@raw/location_g"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>

        <TextView
            android:id="@+id/actualizado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha actualizada"
            android:textSize="@dimen/common_padding_min_text"
            android:padding="@dimen/common_padding_min_min"
            android:background="@drawable/background_item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Textos">

        </TextView>

        <TextView
            android:id="@+id/tvNivel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nivel"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:padding="@dimen/common_padding_min"
            android:background="@drawable/background_item"
            android:layout_marginTop="@dimen/common_padding_default"
            android:layout_marginStart="@dimen/common_padding_min"
            app:layout_constraintStart_toEndOf="@id/imgGestionar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Titulos"/>

        <TextView
            android:id="@+id/tvTipo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:padding="@dimen/common_padding_min"
            android:background="@drawable/background_item"
            android:layout_marginStart="@dimen/common_padding_min"
            app:layout_constraintStart_toEndOf="@id/imgGestionar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNivel"
            style="@style/Titulos"/>

        <TextView
            android:id="@+id/tvHorario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Horario"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:padding="@dimen/common_padding_min"
            android:background="@drawable/background_item"
            android:layout_marginStart="@dimen/common_padding_min"
            app:layout_constraintStart_toEndOf="@id/imgGestionar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTipo"
            style="@style/Titulos"/>

        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:padding="@dimen/common_padding_min"
            android:layout_marginStart="@dimen/common_padding_min"
            android:background="@drawable/background_item"
            app:layout_constraintStart_toEndOf="@id/imgGestionar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHorario"
            style="@style/Titulos"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>