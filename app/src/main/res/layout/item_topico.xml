<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="@dimen/common_padding_default"
    android:layout_marginTop="@dimen/common_padding_min">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding_default">

        <TextView
            android:id="@+id/tituloTopico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título del Ticket Pendiente"
            style="@style/Titulos"/>

        <TextView
            android:id="@+id/estatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tituloTopico"
            android:textStyle="bold|italic"
            android:layout_marginTop="@dimen/common_padding_min"
            android:text="Estatus: En curso de solución"
            style="@style/Textos"/>

        <TextView
            android:id="@+id/fechaCreacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de creación:"
            android:textColor="@color/colorGris"
            android:drawablePadding="@dimen/common_padding_min"
            android:gravity="center_vertical|center"
            android:layout_below="@id/estatus"
            android:layout_marginTop="@dimen/common_padding_min"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/ic_date"
            style="@style/Textos"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>