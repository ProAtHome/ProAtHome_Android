<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondois"
    tools:context=".loginProfesor">

    <TextView
        android:id="@+id/iniciarSTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido Profesor"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/correoET_ISL"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/correoET_ISL"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Correo"
        app:boxStrokeColor="@color/colorPrimary"
        app:boxStrokeWidth="2dp"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/black"
        app:endIconMode="clear_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/contraET_ISL"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/correoET_IS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:inputType="textPersonName"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/contraET_ISL"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:hint="Contraseña"
        android:textColorHint="@android:color/black"
        app:boxStrokeColor="@color/colorPrimary"
        app:boxStrokeWidth="2dp"
        app:endIconMode="password_toggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/entrarBTN"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/contraET_IS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@android:color/black" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvOlvideContra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olvidé mi contraseña."
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/entrarBTN"
        app:layout_constraintStart_toStartOf="@id/contraET_ISL"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/soyClienteBTN"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="soyCliente"
        android:padding="8dp"
        android:text="Soy Cliente"
        app:rippleColor="@color/colorPrimary"
        app:strokeWidth="2dp"
        app:strokeColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@id/entrarBTN"
        app:layout_constraintStart_toStartOf="@id/entrarBTN"
        app:layout_constraintTop_toBottomOf="@id/registrarseBTN"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registrarseBTN"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="registrarse"
        android:padding="8dp"
        android:text="Registrarse"
        app:layout_constraintEnd_toEndOf="@id/entrarBTN"
        app:layout_constraintStart_toStartOf="@id/entrarBTN"
        app:layout_constraintTop_toBottomOf="@id/entrarBTN"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/entrarBTN"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="entrar"
        android:padding="8dp"
        android:text="Iniciar Sesión"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>