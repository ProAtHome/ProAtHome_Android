<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/scrollMapGestionProfesor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_back"
    tools:context=".fragments.DetallesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mapsGestionarProfesor"
                class="com.proathome.servicios.WorkaroundMapFragment"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                tools:context=".MapsFragment" />

            <TextView
                android:id="@+id/tuEstudiante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tu Estudiante:"
                android:textStyle="bold"
                android:layout_margin="@dimen/common_padding_min"
                android:textColor="@color/colorPersonalDark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mapsGestionarProfesor"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/perfilEstudianteCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tuEstudiante"
                android:layout_marginStart="@dimen/common_padding_min"
                android:layout_marginEnd="@dimen/common_padding_min"
                android:layout_marginTop="@dimen/common_padding_min"
                android:focusable="true"
                android:clickable="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/common_padding_min">

                    <ImageView
                        android:id="@+id/foto"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/defaultfoto"
                        android:layout_marginStart="@dimen/common_padding_min"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/estudiante"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Nombre de Estudiante"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="@dimen/common_padding_min"
                        android:layout_marginStart="@dimen/common_padding_default"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/foto"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/descripcionTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Descripcion de Estudiante"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="@dimen/common_padding_default"
                        app:layout_constraintStart_toEndOf="@id/foto"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/estudiante"/>

                    <TextView
                        android:id="@+id/correoTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Correo de Estudiante"
                        android:textStyle="normal"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="@dimen/common_padding_default"
                        app:layout_constraintStart_toEndOf="@id/foto"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/descripcionTV"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="@id/perfilEstudianteCard"
                app:layout_constraintEnd_toEndOf="@id/perfilEstudianteCard"
                app:layout_constraintTop_toBottomOf="@id/perfilEstudianteCard"
                android:layout_marginTop="@dimen/common_padding_min"/>

            <TextView
                android:id="@+id/tuSesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Información de la Sesión:"
                android:textStyle="bold"
                android:layout_margin="@dimen/common_padding_min"
                android:textColor="@color/colorPersonalDark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/infoSesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tuSesion"
                android:layout_marginStart="@dimen/common_padding_min"
                android:layout_marginEnd="@dimen/common_padding_min"
                android:layout_marginTop="@dimen/common_padding_min"
                android:focusable="true"
                android:clickable="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/common_padding_min">

                    <TextView
                        android:id="@+id/horario"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_margin="@dimen/common_padding_min"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:drawableLeft="@drawable/horario"
                        android:drawableTint="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/lugar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/horario"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/common_padding_min"
                        android:textSize="18dp"
                        android:drawableLeft="@drawable/direccion"
                        android:drawableTint="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tiempo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lugar"
                        android:textColor="@android:color/black"
                        android:layout_margin="@dimen/common_padding_min"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/tiempo"
                        android:drawableTint="@android:color/black"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/fecha"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tiempo"
                        android:drawableLeft="@drawable/ic_date"
                        android:layout_margin="@dimen/common_padding_min"
                        android:drawableTint="@android:color/black"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/nivel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/fecha"
                        android:drawableLeft="@drawable/nivel"
                        android:layout_margin="@dimen/common_padding_min"
                        android:drawableTint="@android:color/black"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/observaciones"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/nivel"
                        android:drawableLeft="@drawable/observacion"
                        android:layout_margin="@dimen/common_padding_min"
                        android:drawableTint="@android:color/black"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tipoClase"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/observaciones"
                        android:drawableLeft="@drawable/tipo"
                        android:layout_margin="@dimen/common_padding_min"
                        android:drawableTint="@android:color/black"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_padding_min"
                android:text="Cancelar Clase"
                android:backgroundTint="@android:color/holo_red_dark"
                android:layout_margin="@dimen/common_padding_min"
                app:layout_constraintTop_toBottomOf="@+id/infoSesion"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>