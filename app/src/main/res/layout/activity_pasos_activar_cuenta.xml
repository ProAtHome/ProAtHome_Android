<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasosActivarCuenta">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding_default">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRO AT HOME"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Titulos"/>

        <TextView
            android:id="@+id/tvBienvenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding_min"
            android:text="Bienvenido a PRO AT HOME, para finalizar tu registro y activar tu cuenta seguiremos estos pasos:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo"
            style="@style/Textos"/>

        <TextView
            android:id="@+id/tvUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresa a www.proathome.mx desde tu computadora e inicia sesión."
            android:layout_marginTop="@dimen/common_padding_min"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBienvenido"
            style="@style/Textos"/>

        <TextView
            android:id="@+id/tvPASO1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PASO 1"
            android:layout_marginTop="@dimen/common_padding_min"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUrl"
            style="@style/Titulos"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_viewP1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPASO1"
            app:lottie_rawRes="@raw/emailsend"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>

        <TextView
            android:id="@+id/tvInfoP1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviarás documentación (INE, CERTIFICADO) y nosostros la revisaremos."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/animation_viewP1"
            style="@style/Textos"/>

        <TextView
            android:id="@+id/tvPASO2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PASO 2"
            android:layout_marginTop="@dimen/common_padding_min"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvInfoP1"
            style="@style/Titulos"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_viewP2"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPASO2"
            app:lottie_rawRes="@raw/calendar"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>

        <TextView
            android:id="@+id/tvInfoP2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agendaremos una cita para realizarte una entrevista."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/animation_viewP2"
            style="@style/Textos"/>

        <TextView
            android:id="@+id/tvFinalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡LISTO!, tendrás tu cuenta activa."
            android:layout_marginTop="@dimen/common_padding_min"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvInfoP2"
            style="@style/Titulos"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>