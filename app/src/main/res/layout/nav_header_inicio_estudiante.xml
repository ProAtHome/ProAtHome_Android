<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="@color/colorPersonal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/fotoIV"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/nav_header_desc"
        android:layout_marginTop="30dp"
        app:srcCompat="@mipmap/defaultfoto" />

    <TextView
        android:id="@+id/nombreEstudianteTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="*Nombre* (Estudiante)"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/correoEstudianteTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="correo@correo.com" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/common_padding_min"/>

    <TextView
        android:id="@+id/tipoPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLAN ACTUAL: "
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_date"
        android:layout_marginTop="@dimen/common_padding_min"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

    <TextView
        android:id="@+id/monedero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HORAS DISPONIBLES: "
        android:textStyle="bold"
        android:drawableLeft="@drawable/horario"
        android:layout_marginTop="@dimen/common_padding_min"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

</LinearLayout>
