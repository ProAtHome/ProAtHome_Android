<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:background="@color/colorAzul"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotoIV"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/nav_header_desc"
        android:layout_marginTop="40dp"
        app:srcCompat="@mipmap/defaultfoto" />

    <TextView
        android:id="@+id/nombreClienteTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:fontFamily="@font/mooka"
        android:text="*Nombre* (Cliente)"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/correoClienteTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/din"
        android:text="correo@correo.com" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/common_padding_min"/>

    <TextView
        android:id="@+id/tipoPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAN ACTUAL: "
        android:textStyle="bold"
        android:fontFamily="@font/mooka"
        android:drawableLeft="@drawable/ic_date"
        android:drawablePadding="@dimen/common_padding_min"
        android:gravity="center_vertical|bottom"
        android:layout_marginTop="@dimen/common_padding_min"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

    <TextView
        android:id="@+id/monedero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HORAS DISPONIBLES: "
        android:textStyle="bold"
        android:layout_marginBottom="-10dp"
        android:fontFamily="@font/mooka"
        android:drawableStart="@drawable/horario"
        android:drawablePadding="@dimen/common_padding_min"
        android:gravity="center_vertical|bottom"
        android:layout_marginTop="@dimen/common_padding_min"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

</LinearLayout>
