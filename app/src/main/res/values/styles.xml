<resources>

    <!-- Base application theme. -->
    <style name="AppThemeProfesor" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!--Estilos de mensajes Ayuda Tickets-->
    <style name="StyleCardMsg" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <!--Estilos de mensajes Ayuda Tickets FIN-->

    <style name="MyTheme.DayNight.Add" parent="Base.MyTheme">
        <item name="android:windowEnterTransition">@transition/explode</item>
    </style>

    <style name="AppThemeProfesor.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="backgroundColor">#092635</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Estilos de Titulos y Subtitulos-->
    <style name="Titulos">
        <item name="android:textColor">#092635</item>
        <item name="backgroundColor">#092635</item>
        <item name="fontFamily">@font/mooka</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5</item>
    </style>

    <style name="Textos">
        <item name="android:textColor">#D31B53</item>
        <item name="fontFamily">@font/din</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5</item>
    </style>

    <style name="Textos_Input">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/din</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5</item>
    </style>

    <style name="Boton1">
        <item name="backgroundColor">#D31B53</item>
        <item name="fontFamily">@font/din</item>
        <item name="android:textSize">15dp</item>
    </style>

    <color name="colorRosaStyle">#D31B53</color>
    <color name="colorAzulStyle">#092635</color>
    <color name="colorGrisStyle">#4D4D4D</color>
    <color name="colorBlancoStyle">#FFFFFF</color>

    <style name="MyTheme.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <color name="colorPersonal">#006064</color>
    <color name="colorProfesor">#FE7B00</color>
    <color name="colorPersonalDark">#00838F</color>

    <style name="MyTheme.DayNight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyTheme.DayNight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullScreenDialog" parent="ShapeAppearanceOverlay.MaterialComponents.MaterialCalendar.Window.Fullscreen">

        <item name="android:windowAnimationStyle">

            @style/Animation.AppCompat.Dialog

        </item>

    </style>

</resources>
